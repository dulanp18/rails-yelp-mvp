<h1><%= @restaurant.name  %></h1>
<p>Address: <%= @restaurant.address  %></p>
<p>Phone Number: <%= @restaurant.phone_number  %></p>
<p>Category: <%= @restaurant.category.capitalize  %></p>

<ul>
    <% @restaurant.reviews.each do |review| %>
    <li><%= review.content%> - Rating : <%= review.rating%></li>
    <% end %>

</ul>

<%= link_to "Back To List", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Create A Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

